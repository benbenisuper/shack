<div class="py-2" style="background-color: white">
  <div class="container">
    <%= simple_form_for venues_path, url: venues_path, method: :get, html: { class: "form-inline d-block bg-white rounded-lg d-lg-flex justify-content-lg-between search-bar m-0 p-2" } do |f| %>
      <div class="form-group flex-grow-1">
        <input type="text" class="form-control w-100" placeholder='<%= @location %>' name="location" id="city">
      </div>
      <div class="d-xs-block d-sm-flex flex-sm-wrap justify-content-sm-between my-sm-2 my-lg-0">
        <div class="form-group ml-lg-2">
          <%= f.input :category, 
          collection: Venue::CATEGORIES, 
          id: "inputState", 
          class: "form-control", 
          label: false,
          include_blank: false
          %>
        </div>
        <div class="form-group ml-lg-2" >
          <%= f.input :activity, 
          collection: Venue::ACTIVITIES, 
          id: "inputState", 
          class: "form-control", 
          label: false,
          include_blank: false 
          %>
        </div>
      </div>
      <div class="form-group ml-2">
        <button type="button" class="btn btn-primary w-100" id="filter-btn">Filter</button>
      </div>
    <% end %>
  </div>
</div>