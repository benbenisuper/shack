<div class="container">

  <h1 class="mt-3" style="font-weight: 900">Booking Confirmation</h1>
  <p><%= @booking.venue.name %> - <%= @booking.venue.location %></p>

  <div class="row">

    <div class="col-xs-12 col-lg-7">

      <div class="mb-3 rounded">
        <%= render "slides" %>
      </div>

      <div class="col shadow p-3 bg-white rounded">
        <div class="title-container border-bottom d-flex justify-content-between">
          <h4 class="">Venue Details</h4>
        </div>
        
        <h5 class="mt-4">Description</h5>
        <%= @booking.venue.description %>
        <h5 class="mt-4">Additional information</h5>
        <strong>Capacity: </strong><%= @booking.venue.capacity %><%= (@booking.venue.capacity == "1" ? ' guest' : ' guests') %><br>
        <div class="perks mt-3">
          <% @perks.each do |perk| %>
            <div class="d-flex perk-container">
              <i class="fas fa-<%= Venue.perk_icon(perk) %> mr-3 my-auto"></i>
              <strong><%= perk %></strong><br>
            </div>
          <% end %>
        </div>
      </div>

      <div class="shadow mb-3 rounded mt-3 rounded">
        <%= render "venues/show_map" %>
      </div>

      <div class="col shadow p-3 mb-4 bg-white rounded sticky-div">
        <% if @booking.can_comment? %>
          <h2 class=''>Review</h2>
          <%= render 'review_form' %>
        <% elsif @booking.show_comment? %>
          <h2 class='border-bottom'>Review</h2>

          <div style="display: flex; justify-content: space-between">
            <h4><%= @review.title %></h4>
            <h4 class=""><%= ('<i class="fas fa-star"></i>' * @review.rating).html_safe %><%= ('<i class="far fa-star"></i>' * (5 - @review.rating)).html_safe %></h4>
          </div>

          <p><%= @review.comment %></p>
        <% else %>
          <h3 class='text-center text-muted'>Can't Review Yet</h3>
        <% end %>
      </div>

    </div>

    <div class="col-xs-12 col-lg-5">
      <div class="col shadow p-3 bg-white rounded sticky-div">
        <h2 class='border-bottom mb-3'><%= current_user == @booking.venue.user ? "Booking Information" : "Booking Confirmation" %></h2>
        <div class="d-flex justify-content-between mb-3 mt-3">
          <p class="text-left">Venue:</p>
          <% if @booking.venue.nil? %>
          <p>Venue: <strong>This venue is no longer available.</strong></p>
          <% else %>
          <p><strong><%= @booking.venue.name %></strong></p>
          <% end %>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <p>Start Date and Time:</p>
          <p><strong><%= @booking.start_date %></strong></p>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <p class="text-left">End Date and Time:</p>
          <p><strong><%= @booking.end_date %></strong></p>
        </div>

        <div class="d-flex justify-content-between mb-3">
          <p class="text-left">Status:</p>
          <p><strong><%= @booking.status %></strong></p>
        </div>

        <div class="d-flex justify-content-between mb-3">
          <p>Price per day:</p>
          <% if @booking.venue.nil? %>
          <p>Price per day: <strong>No longer available.</strong></p>
          <% else %>
          <p><strong><%= @booking.venue.price.to_i %> CHF / day</strong></p>
          <% end %>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <p>NÂ° of days:</p>
          <p><strong><%= @booking.days %></strong></p>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <p>Total price:</p>
          <p><strong><%= @booking.price.to_i %> CHF</strong></p>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= link_to "Go to your dashboard",dashboard_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
