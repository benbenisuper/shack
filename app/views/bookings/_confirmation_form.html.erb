<%= simple_form_for [@booking] do |f| %>
    <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
    <%= f.input :venue_id, :as => :hidden, :input_html => { value: @booking.venue.id } %>
    <p class='text-left'>Price per hour: <strong><%= @booking.venue.price %> CHF</strong></p>
    <p class='text-left'>Total price:  <strong><%= @booking.venue.price * (@booking.end_date - @booking.start_date).to_i %> CHF</strong></p>
    <div class="d-flex justify-content-between">
      <%= f.submit "Confirm", class:"btn btn-primary" %>
      <%= link_to "cancel",venue_path(@booking.venue.id), class:"btn btn-danger"%>
    </div>
  <% end %>
